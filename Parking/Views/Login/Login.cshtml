@model   Parking.Models.LoginM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.min.js" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" />
    <script src="https://kit.fontawesome.com/7e3df59c36.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/Main.js"></script>
    <title>Login</title>

    <style>
        .center {
            margin: 0 auto;
            width: 80 %;
        }
        .container {
            margin-top: 10%;
        }

        .form-control {
            text-align: center;
        }

        .input-wrapper {
            display: inline-block;
            position: relative;
        }

        .required {
            color: red;
        }
    </style>

    <script>
        $(function () {
            var error = document.getElementById("alerta").innerText.trim();
            if (error != "") {
                alert(error);
            }
        });

    </script>
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @ViewBag.Script

        <div class="container text-center col-md-4">
            <div id="alerta" hidden>
                @ViewBag.Message
            </div>
            <div class="form-group">
                <div class="input-wrapper">
                    <span class="input-group-addon"><i class="far fa-user"></i></span><span class="required">*</span>
                    <div>
                        <input class="form-control" required="required" type="text" name='username' placeholder="username" />
                    </div>
                    <div>
                        <span>@Html.ValidationMessageFor(m => m.UserName)</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-wrapper">
                    <span class="input-group-addon"><i class="far fa-lock"></i></span><span class="required">*</span>
                    <input class="form-control" required="required" type="password" name='password' placeholder="password" />
                    <span>@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
            </div>
            @*<div class="checkbox">
                    <label>
                        <input type="checkbox"> I agree to the <a href="#">Terms and Conditions</a>
                    </label>
                </div>*@
            <div class="input-wrapper">
                <button type="submit" id="testbtn" class="btn btn-def btn-block">Login</button>
            </div>
            <div class="form-group text-center">
                <a href="#loginModal" role="button" class="" data-toggle="modal" data-target="#myModal">Forgot Password</a>&nbsp;|&nbsp;<a href="#">Support</a>
            </div>


        </div>
    }
    <!-- The Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header text-center">
                    <h4 class="modal-title">Reset password</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="col text-center">
                            <button class="btn btn-success">Click to send email</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            Or
                        </div>
                    </div>
                    <div class="row">
                        <div class="center">
                            <div class="text-center">
                                <input class="form-control" id="inpPN" placeholder="Phone number" />
                            </div>
                            <div class="text-center" id="divSVC" style="display:none;">
                                <button class="btn btn-default" id="bntSVC">Send verification code</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
